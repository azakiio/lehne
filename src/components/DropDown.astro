---
import { getRelativeLocaleUrl } from "astro:i18n";
// import { Icon } from "astro-icon";

interface Props {
  label: string;
  href: string;
  items?: { label: string; href: string }[];
}

const { label, href, items } = Astro.props;
const locale = Astro.currentLocale || "en";
---

<div class="relative parent flex items-center gap-2">
  <a class="link" href={getRelativeLocaleUrl(locale, href)}>{label}</a>
  <div>V</div>
  <div class="menu bg-primary">
    {
      items?.map(({ label, href }) => (
        <a class="p-2" href={getRelativeLocaleUrl(locale, href)}>
          {label}
        </a>
      ))
    }
  </div>
</div>

<style>
  .parent {
    justify-content: center;
    padding-inline: 20px;
  }

  .menu {
    display: flex;
    box-shadow: 0 6px 16px 4px lch(0 0 0 / 50%);
    position: absolute;
    top: 100%;
    flex-direction: column;
    transition:
      scale 0.5s,
      opacity 0.5s;
    transform-origin: top;
    opacity: 0;
    scale: 1 0;
  }

  .parent:hover .menu {
    opacity: 1;
    scale: 1;
    /* display: flex; */
  }

  /* look into background-effect kevin powell */
  .link {
    color: inherit;
    text-decoration: none;
    padding: 10px 5px;
    display: block;
    position: relative;
    text-align: center;
    transition: transform 0.3s;
    background-size: 2px 2px;
    background-repeat: no-repeat;
    background-position: 0%;
  }

